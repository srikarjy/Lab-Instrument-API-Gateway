# Database Configuration
# SECURITY: Use strong passwords and enable SSL in production
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lab_instruments
DB_USER=lab_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_SSL_MODE=require

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
GRPC_PORT=9090

# TLS Configuration
TLS_CERT_FILE=certs/server.crt
TLS_KEY_FILE=certs/server.key
TLS_CA_FILE=certs/ca.crt

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics Configuration
METRICS_PORT=8081
METRICS_PATH=/metrics

# Performance Configuration
MAX_CONCURRENT_STREAMS=1000
MAX_MESSAGE_SIZE=4194304
CONNECTION_TIMEOUT=30s
KEEPALIVE_TIME=30s
KEEPALIVE_TIMEOUT=5s

# Security Configuration
# SECURITY: Generate a strong JWT secret (min 32 characters)
JWT_SECRET=CHANGE_ME_GENERATE_STRONG_JWT_SECRET_MIN_32_CHARS
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m
# SECURITY: Enable authentication and authorization
AUTH_ENABLED=true
CORS_ALLOWED_ORIGINS=https://yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# AWS Configuration (for production)
# SECURITY: Use IAM roles instead of access keys when possible
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
# SECURITY: Enable encryption at rest and in transit
AWS_S3_ENCRYPTION=AES256
AWS_RDS_ENCRYPTION=true

# Monitoring Configuration
PROMETHEUS_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces